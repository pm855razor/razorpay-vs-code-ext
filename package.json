{
  "name": "razorpay-vscode-extension",
  "displayName": "Razorpay for VS Code",
  "description": "Razorpay Code Snippets Extension",
  "version": "0.0.1",
  "publisher": "razorpay",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Snippets"
  ],
  "keywords": [
    "razorpay",
    "snippets",
    "code snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "razorpay",
          "title": "Razorpay",
          "icon": "resources/razorpay-icon.svg"
        }
      ]
    },
    "views": {
      "razorpay": [
        {
          "id": "razorpaySnippets",
          "name": "Code Snippets"
        }
      ]
    },
    "commands": [
      {
        "command": "razorpay.insertSnippet",
        "title": "Insert Snippet",
        "category": "Razorpay"
      },
      {
        "command": "razorpay.snippets.generate",
        "title": "Generate Code Snippet",
        "category": "Razorpay"
      },
      {
        "command": "razorpay.snippets.list",
        "title": "List Available Snippets",
        "category": "Razorpay"
      },
      {
        "command": "razorpay.refreshSnippets",
        "title": "Refresh Snippets",
        "category": "Razorpay",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "razorpay.refreshSnippets",
          "when": "view == razorpaySnippets",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Razorpay",
      "properties": {
        "razorpay.enableLogging": {
          "type": "boolean",
          "default": true,
          "description": "Enable extension logging",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/__tests__/integration",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {}
}
